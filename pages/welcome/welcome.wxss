/* pages/welcome/welcome.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-top: 160rpx;
  border-radius: 75rpx;
}

.user-name {
  margin-top: 150rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.moto-container {
  width: 200rpx;
  height: 80rpx;
  margin-top: 200rpx;
  text-align: center;
  border: 1px solid #405f80;
  border-radius: 5px;
}

.moto {
  line-height: 80rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
}

page {
  height: 100%;
  background: #b3d4db;
}
