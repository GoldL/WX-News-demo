.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  margin-bottom: 5px;
  font-size: 26rpx;
  vertical-align: middle;
}

.post-title {
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  color: #333;
  font-weight: 600;
}

.post-image {
  margin: auto 0;
  margin-bottom: 15rpx;
  width: 100%;
  height: 340rpx;
}

.post-content {
  line-height: 40rpx;
  margin-bottom: 2rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
}

.post-like {
  font-size: 20rpx;
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 20rpx;
}

.post-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-text {
  vertical-align: middle;
  margin-right: 20rpx;
}
