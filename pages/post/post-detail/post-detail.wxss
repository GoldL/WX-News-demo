/* pages/post/post-detail/post-detail.wxss */

.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    width: 100%;
    height: 460rpx;
}

.hide {
    opacity: 0;
}

.audio {
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    top: 180rpx;
    margin-left: -51rpx;
    opacity: 0.6;
}

.author-date {
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}

.author {
    margin-left: 20rpx;
    font-size: 30rpx;
    font-weight: 300;
    vertical-align: middle;
    color: #666;
}

.const-text {
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #999;
}

.date {
    margin-left: 30rpx;
    font-size: 24rpx;
    vertical-align: middle;
    color: #999;
}

.title {
    margin-top: 30rpx;
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    letter-spacing: 2px;
    color: #4b556c;
}

.tool {
    margin-top: 20rpx;
}

.circle-img {
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}

.circle-img Image {
    width: 90rpx;
    height: 90rpx;
}

.share-img {
    margin-left: 30rpx;
}

.horizon {
    width: 660rpx;
    height: 1px;
    vertical-align: middle;
    background-color: #e5e5e5;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}

.detail {
    margin: 20rpx 30rpx 0 30rpx;
    color: #666;
    line-height: 44rpx;
    letter-spacing: 2px;
}
